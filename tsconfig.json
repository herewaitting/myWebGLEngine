{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": [
      "webworker",
      "dom",
      "es5",
      "es6",
      "esnext",
      "es2015",
      "es2015.promise"
    ],
    "allowJs": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "types", "lib/Core/gl-matrix.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
